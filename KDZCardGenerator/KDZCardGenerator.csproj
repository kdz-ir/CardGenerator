<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<UseWindowsForms>true</UseWindowsForms>
		<ImplicitUsings>enable</ImplicitUsings>
		<RepositoryUrl>https://github.com/kdz-ir/CardGenerator</RepositoryUrl>
		<PackageIcon>kanoon.png</PackageIcon>
		<ApplicationIcon>Resource\Image\kanoon.ico</ApplicationIcon>
	</PropertyGroup>

	<ItemGroup>
	  <Content Include="Resource\Image\kanoon.ico" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="NPOI" Version="2.5.5" />
		<PackageReference Include="ReaLTaiizor" Version="3.7.8.5" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="Resource\Image\kanoon.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

</Project>